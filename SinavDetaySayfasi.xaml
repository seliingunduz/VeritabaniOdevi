<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VeritabaniOdevi.SinavDetaySayfasi"
             Title="Sınav Detayları">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Sınav Detayları"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- Ders Detayları Başlığı -->
            <Grid ColumnSpacing="10" RowSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Label Text="Ders Adı" FontAttributes="Bold" Grid.Column="0" />
                <Label Text="Doğru Sayısı" FontAttributes="Bold" Grid.Column="1" />
                <Label Text="Yanlış Sayısı" FontAttributes="Bold" Grid.Column="2" />
            </Grid>

            <!-- Detaylar İçin Konteyner -->
            <VerticalStackLayout x:Name="SinavDetayContainer" Spacing="10">
                <!-- Dinamik olarak doldurulacak -->
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
